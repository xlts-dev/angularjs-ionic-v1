{
  "name": "angularjs-ionic-v1",
  "version": "0.4.1",
  "description": "Ionic v1 with XLTS for AngularJS",
  "repository": {
    "type": "git",
    "url": "https://github.com/xlts-dev/angularjs-ionic-v1"
  },
  "engines": {
    "node": ">=18",
    "npm": "9"
  },
  "license": "MIT",
  "devDependencies": {
    "@ionic/cli": "6.18.1",
    "@ionic/v1-toolkit": "3.1.2",
    "@playwright/test": "^1.30.0",
    "@types/angular": "^1.8.4",
    "@types/angular-material": "^1.1.73",
    "cordova": "11.0.0",
    "cordova-android": "10.1.1",
    "cordova-ios": "6.2.0",
    "cordova-plugin-device": "^2.0.2",
    "cordova-plugin-ionic-keyboard": "^2.2.0",
    "cordova-plugin-ionic-webview": "^4.2.1",
    "cordova-plugin-splashscreen": "^5.0.2",
    "cordova-plugin-statusbar": "^2.4.2",
    "cordova-plugin-whitelist": "^1.3.3",
    "gulp": "3.9.1",
    "gulp-clean-css": "^3.10.0",
    "gulp-rename": "^1.4.0",
    "gulp-sass": "^5.0.0",
    "native-run": "^1.5.0",
    "sass": "^1.35.2"
  },
  "dependencies": {
    "angular": "npm:@xlts.dev/angular-1.5.x@1.5.17",
    "angular-animate": "npm:@xlts.dev/angular-animate-1.5.x@1.5.17",
    "angular-aria": "npm:@xlts.dev/angular-aria-1.5.x@1.5.17",
    "angular-material": "npm:@xlts.dev/angular-material-1.1.x@1.1.30",
    "angular-messages": "npm:@xlts.dev/angular-messages-1.5.x@1.5.17",
    "angular-sanitize": "npm:@xlts.dev/angular-sanitize-1.5.x@1.5.17",
    "angular-ui-router": "0.2.13",
    "ionic-sdk": "1.3.2"
  },
  "resolutions": {
    "graceful-fs": "4.2.10"
  },
  "scripts": {
    "preinstall": "npx npm-force-resolutions && npx playwright install",
    "postinstall": "bash tools/populate-lib.sh",
    "start": "npm run start:web",
    "start:web": "ionic-v1 serve",
    "start:android": "ionic cordova run android -l",
    "start:ios": "ionic cordova run ios -l --external",
    "build:web": "ionic-v1 build",
    "build:android": "ionic cordova build android",
    "build:ios": "ionic cordova build ios",
    "e2e": "playwright test",
    "e2e:debug": "playwright test --project chromium --headed",
    "e2e:report": "playwright show-report",
    "prepare:ios": "ionic cordova prepare ios",
    "prepare:android": "ionic cordova prepare android"
  },
  "cordova": {
    "plugins": {
      "cordova-plugin-whitelist": {},
      "cordova-plugin-statusbar": {},
      "cordova-plugin-device": {},
      "cordova-plugin-splashscreen": {},
      "cordova-plugin-ionic-webview": {},
      "cordova-plugin-ionic-keyboard": {}
    },
    "platforms": [
      "android",
      "ios"
    ]
  }
}
